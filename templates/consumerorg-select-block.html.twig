{#
/**
 * @file
 * Default theme implementation for a consumer organization selector block
 *
 * Variables available:
 * - selected_name: The name of the currently selected consumer organization.
 * - orgs: The array of consumerorgs this user is in.
 *   each org = array('title'=>'My Org', 'link_object'=>'/foo/123')
 *
 * @ingroup themeable
 */
#}

<div class="consumerorgSelectBlock">
  <ul class="dropitmenu orgmenu">
    <li><a href="#" title="{{ 'Current organization:'|t }} {{ selected_name }}">
        <div class="orgHeading">
          <div class="subTitle">
          {{ 'Organization'|t }}
          </div>
          <div class="currentOrg">
            {{ selected_name }}
          </div>
        </div>
        <span class="dropit-icon">
          <svg class=${addClass} width="10" height="6" viewBox="0 0 10 6" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0.713751 0.996319C0.713751 0.816319 0.78375 0.64632 0.92375 0.51632C1.19375 0.27632 1.60375 0.29632 1.84375 0.55632L4.99001 4.04946L8.00782 0.560219C8.24782 0.290219 8.65782 0.280219 8.92782 0.520219C9.18782 0.760219 9.20782 1.17022 8.96782 1.44022L5.51001 5.41945C5.23001 5.72945 4.75001 5.72945 4.47001 5.41945L0.883749 1.43632C0.763749 1.30632 0.713751 1.15632 0.713751 0.996319Z" fill="${color}"/>
          </svg>
      </span></a>
      <ul class="dropitmenu-submenu">
        <li class="elipsis-names myorg" title="{{ 'My organization'|t }}"><a href="{{ path('ibm_apim.myorg') }}" class="elipsis-names">Текущая организация</a></li>
        {%  if create_allowed == true %}
        <li class="elipsis-names createorg" title="{{ 'Create organization'|t }}">
          <a href="{{ path('consumerorg.create') }}" class="elipsis-names use-ajax"
            data-dialog-type="modal"
            data-dialog-options="{&quot;width&quot;:&quot;auto&quot;}"
          >
            {{ 'Create organization'| t }}
          </a>
        </li>
        {% endif %}
        <li class="selectorg" disabled>{{ 'Select organization'|t }}</li>
        {% for org in orgs %}
          <li class="elipsis-names consumerorg" {% if org.title == selected_name %}selected=true{% endif %}
              title="{{ org.title }}">{{ org.link_object }}</li>
        {% endfor %}
      </ul>
    </li>
  </ul>
</div>